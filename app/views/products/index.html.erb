<div class="shop-container">
  <div class="sidebar-container">
    <h2 class="p-big-black">Fruits</h2>
    <h2 class="p-big-black">Vegetables</h2>
    <h2 class="p-big-black">Eggs</h2>
    <h2 class="p-big-black">Wine</h2>
  </div>

  <% @products.each do |product| %>
  <div class="categories-container">
    <div class="category-container">
      <h2 class="h3-category"><%= product.category %></h2>
      <div class="cards-container">
        <div class="card-vertical" style="background-image: linear-gradient(rgba(0,0,0,0.45), rgba(0,0,0,0)),
         url('<%= cl_image_path product.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="product-info-container">
            <div class="product-description">
              <p class="p-white"><%= product.name %></p>
              <div class="product-info-price p-white"><p>Amount: <%= humanized_money_with_symbol(product.price) %></p></div>
            </div>
            <div class="product-info-btn">
              <a href="#" class="btn-plusminus">
                <div class="btn-plusminus-minus link-big-white">-</div>
                <div class="btn-plusminus-amount link-big-white">0</div>
                <div class="btn-plusminus-plus link-big-white">+</div>
              </a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>

    <div class="category-container">
      <h2 class="h3-category">Vegetables</h2>
      <div class="cards-container">
        <div class="card-vertical">
          <div class="product-info-container">
            <div class="product-description">
              <p class="p-white">Simon's cabbage</p>
              <div class="product-info-price p-white">100 E</div>
            </div>
            <div class="product-info-btn">
              <a href="#" class="btn-plusminus">
                 <div class="btn-plusminus-minus link-big-white">-</div>
                <div class="btn-plusminus-amount link-big-white">0</div>
                <div class="btn-plusminus-plus link-big-white">+</div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="category-container">
      <h2 class="h3-category">Eggs</h2>
      <div class="cards-container">

      </div>
    </div>

    <div class="category-container">
      <h2 class="h3-category">Wine</h2>
      <div class="cards-container">

      </div>
    </div>
  </div>
</div>

